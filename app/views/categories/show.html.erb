<p style="color: green"><%= notice %></p>

<%= render @category %>

<% @category.trans.each do |tran| %>
  <%= tran.name %>
  <%= tran.amount %>
  <%= tran.created_at.strftime('%d %b %Y') %>
  <br>
<% end %>

<div>
Total Amount: <%= @category.total_amount%><br>
<%= link_to 'New Transaction', new_category_tran_path(@category) %>
  <%= link_to "Edit this category", edit_category_path(@category) %> |
  <%= link_to "Back to categories", categories_path %>


  <%= button_to "Destroy this category", @category, method: :delete %>
  
</div>
 